<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#DCF8C6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_marginBottom="-30dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@color/colorPrimary">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/description_inputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:theme="@style/TextLabelDark">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/income_et_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:inputType="text"
                        android:maxLength="30"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:theme="@style/TextLabelDark" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/amount_inputlayout"
                    android:theme="@style/TextLabelDark"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/income_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:maxLength="10"
                        android:hint="Value"
                        android:inputType="numberDecimal"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:theme="@style/TextLabelDark" />


                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_save_income"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginRight="28dp"
                android:background="@color/colorAccent"
                android:src="@drawable/ic_save" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:layout_marginTop="-20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>