<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF8C6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/shapekategori"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Name"
                            android:textColor="#0000ff"
                            android:textStyle="italic"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Balance : "
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/totalMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1.000.000,-"
                            android:textColor="#0000ff"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/exCount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="#ff0000"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:text="Total Expense by per Category"/>
                <LinearLayout
                    android:background="@drawable/shapekategori"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cat_others"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others "
                            android:textSize="20dp" />
                        <TextView
                            android:paddingTop="4dp"
                            android:id="@+id/count_Others"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1.000.000,-"
                            android:textStyle="bold"
                            android:textColor="#34b7f1"
                            android:gravity="right"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <View
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cat_foods"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Foods and Drinks"
                            android:textSize="18dp" />

                        <TextView
                            android:paddingTop="3dp"
                            android:id="@+id/count_Foods"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="1.000.000,-"
                            android:textColor="#34b7f1"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <View
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cat_traveling"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Traveling "
                            android:textSize="18dp" />

                        <TextView
                            android:paddingTop="4dp"
                            android:id="@+id/count_Traveling"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:text="1.000.000,-"
                            android:textColor="#34b7f1"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <View
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cat_shopping"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Shopping "
                            android:textSize="18dp" />

                        <TextView
                            android:paddingTop="4dp"
                            android:id="@+id/count_Shopping"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:text="1.000.000,-"
                            android:textColor="#34b7f1"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <View
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_cat_transport"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Transport "
                            android:textSize="18dp" />

                        <TextView
                            android:paddingTop="4dp"
                            android:id="@+id/count_Transport"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:text="1.000.000,-"
                            android:textColor="#34b7f1"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <com.github.mikephil.charting.charts.PieChart
                android:background="@drawable/shapekategori"
                android:id="@+id/idPieChart"
                android:layout_width="match_parent"
                android:layout_height="320dp">

            </com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>